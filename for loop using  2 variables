03)
#include<stdio.h>
void main()
{
    int n,i,j;
    printf("enter n:");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        for(j=n;j>=i;j--)
        {
         printf("%d",n-i+1);
        }
     printf("\n");
    }
}
04)
#include<stdio.h>
int main()
{
    int n;
    printf("Enter n:");
    scanf("%d",&n);
    for(int i=1;i<=n;i++)
    {
     for(int j=1;j<=i;j++){
      printf("%d",j%2);
     }
     printf("\n");
    }
return 0;
}
